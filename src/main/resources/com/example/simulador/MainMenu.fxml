<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.simulador.MainController"
      alignment="CENTER"
      spacing="10">

    <!-- Botones para las opciones del menú principal -->
    <VBox alignment="CENTER" spacing="10">
        <Button text="Nuevo juego" onAction="#openGameBoard"/>
        <Button text="Cargar juego" onAction="#handleLoadGame"/>
    </VBox>

    <!-- Botón para abrir la pantalla de configuración -->
    <Button text="Abrir Configuración" onAction="#openConfigScreen" />
</VBox>
